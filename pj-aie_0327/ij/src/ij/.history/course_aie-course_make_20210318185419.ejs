                    <img src="./assets/img/name_i.png" alt="アイエステ">
                </picture>
            </div>
        </div>
        <section>
            <div class="aie-c-fv">
                <img class="aie-c-fv__mainPic tab_none" src="<%- dir %>assets/img/course_aie-course_make/fv@3x.png" alt="メイクアップアーティスト専攻">
